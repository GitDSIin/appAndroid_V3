<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TextLabel" parent="TextAppearance.Design.Hint">
        <item name="android:textSize">50sp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_centerInParent">false</item>
        <item name="android:paddingRight">100dp</item>
        <item name="android:textColorHint">@color/colorSecundario</item>

    </style>

    <style name="SplashTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/splashscreen</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="windowNoTitle">true</item>
        <item name="android:actionButtonStyle">@style/MyActionButtonStyle</item>
    </style>

    <style name="MyActionButtonStyle" parent="AppTheme.NoActionBar">
        <item name="android:minWidth">20dp</item>
        <item name="android:padding">4dp</item>
        <item name="android:paddingLeft">20dp</item>
    </style>
    <style name="CustomTextAppearanceTab" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="DialogTheme" parent="android:Theme.Dialog">

        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <!-- No backgrounds, titles or window float -->
        <item name="android:windowBackground">#d3d3d3</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">false</item>
    </style>



</resources>