<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/InicioLayout"
    tools:context=".MainActivity">

    <include
        android:id="@+id/pageheadertop"
        layout="@layout/toolbar_hearder"

        >

    </include>

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/main_fragment"
        android:tag="main_fragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:name="androidx.navigation.fragment.NavHostFragment"
        app:defaultNavHost="false"
        app:navGraph='@navigation/nav_graph'
        app:layout_constraintTop_toBottomOf="@+id/pageheadertop"
        app:layout_constraintBottom_toTopOf="@+id/bottomBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />


    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomBar"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        app:itemIconSize="35dp"
        app:itemPaddingTop="10dp"
        android:background="@color/backgroundButtons"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:itemIconTint="@drawable/navigation_bottom_view_colored"
        app:labelVisibilityMode="labeled"
        app:menu="@menu/menu_bottom">
    </com.google.android.material.bottomnavigation.BottomNavigationView>




    <RelativeLayout
        android:id="@+id/layout_nav_bar_inicio"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:translationZ="90dp"
        android:visibility="gone"
        android:background="@drawable/background_opacity"
        >
        <com.google.android.material.navigation.NavigationView
            android:id="@+id/nav_view_inicio"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:fitsSystemWindows="true"
            app:headerLayout="@layout/nav_header_main"
            app:menu="@menu/menu_nav_bar"
            tools:ignore="MissingConstraints"
            android:visibility="visible"/>

    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>