<?xml version="1.0" encoding="utf-8"?>

<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/tool_bar_principal"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:navigationIcon="@drawable/ic_menu_hearder_24"
        app:contentInsetLeft="0dp"
        app:contentInsetStart="0dp"
        app:contentInsetStartWithNavigation="0dp"
        android:background="@color/backgroundButtons"
        app:titleTextColor="@color/colorTextoBotones"
        android:elevation="4dp"
        tools:ignore="MissingConstraints">




        <RelativeLayout
            android:id="@+id/rltUpdateHeaderBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            tools:ignore="MissingConstraints">
            <LinearLayout
                android:id="@+id/layoutheadertitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tituloBarHeader"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorTitulos"
                    android:layout_marginRight="5dp"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/helvetica"
                    android:gravity="center"
                    android:text="Negocios:"/>



                <Spinner
                    android:id="@+id/inicio_negocios_spinner_toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    style="@style/Widget.AppCompat.Spinner"
                    android:background="@drawable/spinner_bg"
                    android:dropDownWidth="match_parent"
                    android:dropDownVerticalOffset="?attr/dropdownListPreferredItemHeight"
                    android:popupBackground="@android:color/white"
                    android:popupElevation="3dp"
                    android:gravity="left"
                    android:stateListAnimator="@drawable/spinner_sla"

                    />



            </LinearLayout>

            <ImageView
                android:id="@+id/btnUpdMonitoresAccion"
                android:layout_width="29dp"
                android:layout_height="29dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:background="@drawable/ic_refresh_24"
                android:visibility="gone"
                tools:ignore="MissingConstraints" />


        </RelativeLayout>








    </androidx.appcompat.widget.Toolbar>




    <com.google.android.material.floatingactionbutton.FloatingActionButton

        android:id="@+id/float_btn_alerta_usr"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_marginTop="5dp"
        app:layout_anchor="@+id/tool_bar_principal"
        app:layout_anchorGravity="top|right|end"
        app:backgroundTint="@color/color_alertas"
        android:visibility="gone"
        />


    <TextView
        android:id="@+id/txt_alerta_usr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="!"
        android:elevation="6dp"
        android:textSize="11dp"
        android:gravity="center_vertical"
        android:textColor="#fff"
        app:layout_anchor="@+id/float_btn_alerta_usr"
        app:layout_anchorGravity="center"
        android:visibility="gone"

        />




    <ProgressBar
        android:id="@+id/progressbartop"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:indeterminate="true"
        android:minHeight="5dp"
        android:visibility="gone"
        android:layout_marginTop="55dp"
        android:layout_gravity="bottom"
        android:foregroundGravity="bottom"
        tools:ignore="MissingConstraints" />




</androidx.coordinatorlayout.widget.CoordinatorLayout>
