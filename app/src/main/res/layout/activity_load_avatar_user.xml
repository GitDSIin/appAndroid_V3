<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".usuario.avatar_usuario"
    android:background="@drawable/background_negocios"
    tools:ignore="HardcodedText">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:id="@+id/tool_bar_interno_superior"
        android:background="@color/colorPrimario"
        android:orientation="horizontal"

        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="4"
            android:orientation="vertical">



            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:weightSum="3"
                android:orientation="horizontal">



                <TextView
                    android:id="@+id/lbl_nom_archivo"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:lines="2"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/helvetica"
                    android:textAlignment="center"
                    android:text="Seleccionar Foto"
                    android:textColor="@color/colorTextoBotones"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    tools:ignore="MissingConstraints,RtlCompat" />


                <LinearLayout
                    android:id="@+id/ly_visor_menu_compartir"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:orientation="vertical"
                    tools:ignore="MissingConstraints">

                    <ImageView
                        android:id="@+id/btnModalAvatarReturn"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:gravity="center_vertical"
                        android:background="@drawable/flechahaciaatrasv224"

                        />
                </LinearLayout>



            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>



    </LinearLayout>







    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55sp"
        android:id="@+id/tool_bar_interno"
        android:background="@color/colorSecundario"
        android:orientation="horizontal"
        android:layout_marginTop="48dp"


        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="4"
            android:orientation="vertical">



            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:weightSum="3"

                android:orientation="horizontal">



                <TextView

                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:paddingLeft="10dp"
                    android:paddingRight="50dp"
                    android:lines="2"

                    android:textSize="15sp"
                    android:fontFamily="@font/helvetica"
                    android:textColor="@color/colorTitulos"
                    tools:ignore="MissingConstraints" />


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:gravity="center_vertical"
                    android:layout_marginRight="20dp"


                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:orientation="vertical"
                    tools:ignore="MissingConstraints">

                    <ImageView
                        android:id="@+id/avatar_image_search"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:gravity="center_vertical"

                        android:background="@drawable/anadir"

                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:gravity="center_vertical"
                    android:layout_marginRight="65dp"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:orientation="vertical"

                    tools:ignore="MissingConstraints">

                    <ImageView
                        android:id="@+id/avatar_image_save"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:gravity="center_vertical"
                        android:background="@drawable/aceptaravatar"
                        />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:gravity="center_vertical"
                    android:layout_marginRight="20dp"

                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:orientation="vertical"

                    tools:ignore="MissingConstraints">

                    <ImageView
                        android:id="@+id/avatar_image_delete"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:gravity="center_vertical"
                        android:background="@drawable/removeavatar"
                        android:visibility="gone"
                        />
                </LinearLayout>



            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>



    </LinearLayout>








    <!--Button to open the image selector-->
    <com.google.android.material.chip.Chip
        android:id="@+id/BSelectImage"
        android:layout_width="100dp"
        android:layout_height="45dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:text="Elegir foto"
        android:textAlignment="center"
        app:chipBackgroundColor="@color/backgroundButtons"
        android:fontFamily="@font/helvetica"
        android:textColor="@color/colorAccent"
        android:textSize="15dp"
        app:chipMinTouchTargetSize="0dp"
        android:visibility="gone"
        />

    <ImageView
        android:id="@+id/IVPreviewImageAct"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_below="@id/BSelectImage"
        android:layout_marginStart="16dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:visibility="gone"/>



    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_below="@id/tool_bar_interno">

        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            >
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:layout_marginTop="50dp"
                android:orientation="horizontal">


                <ImageView
                    android:id="@+id/IVPreviewImageDf"
                    android:layout_width="match_parent"
                    android:layout_height="350dp"
                    android:layout_marginStart="16dp"
                    android:visibility="gone"
                    android:layout_marginEnd="16dp"
                    />

                <ImageView
                    android:id="@+id/IVPreviewImage"
                    android:layout_width="match_parent"
                    android:layout_height="350dp"
                    android:layout_marginStart="16dp"

                    android:layout_marginEnd="16dp"
                    />



            </LinearLayout>

        </ScrollView>

    </LinearLayout>




    <TextView
        android:id="@+id/btnEliminarAvatar"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:text="Eliminar Imagen"
        android:textSize="15dp"
        android:textAppearance="@style/TextLabel"
        android:textColor="@color/colorTitulos"
        android:layout_marginTop="20dp"
        android:visibility="gone"
        android:gravity="center_vertical|center_horizontal"
        android:layout_below="@id/IVPreviewImage"
        android:fontFamily="@font/helvetica"
        tools:ignore="NotSibling" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:gravity="center"
        android:visibility="gone"
        android:layout_below="@id/btnEliminarAvatar"
        android:orientation="horizontal">



        <com.google.android.material.chip.Chip
            android:id="@+id/btnCancelarImageAvatar"
            android:layout_width="100dp"
            android:layout_height="45dp"


            android:text="Cancelar"
            app:chipBackgroundColor="@color/backgroundButtons"
            android:textAlignment="center"
            android:fontFamily="@font/helvetica"
            android:textColor="@color/colorAccent"
            android:textSize="11dp"
            app:chipMinTouchTargetSize="0dp"
            />



        <com.google.android.material.chip.Chip
            android:id="@+id/btnGuardarImageAvatar"
            android:layout_width="100dp"
            android:layout_height="45dp"
            app:chipBackgroundColor="@color/backgroundButtons"
            android:textAlignment="center"
            android:text="Guardar"
            android:fontFamily="@font/helvetica"
            android:textColor="@color/colorAccent"
            android:textSize="11dp"
            app:chipMinTouchTargetSize="0dp"
            />

    </LinearLayout>

</RelativeLayout>