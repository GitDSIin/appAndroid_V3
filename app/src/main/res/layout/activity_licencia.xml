<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nestedScrollViewLicencia"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_licencia"
    android:paddingBottom="20dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="10dp"
    tools:context=".licencia.LicenciaActivity">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardLogin"
            android:layout_width="match_parent"
            android:layout_height="550dp"
            android:layout_below="@+id/toolbar"
            android:layout_margin="10dp"
            android:layout_marginTop="50dp"
            app:cardBackgroundColor="@android:color/transparent"
            app:cardElevation="0dp"
            app:cardCornerRadius="5dp"
            >



            <LinearLayout
                android:id="@+id/fakeButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical|center_horizontal"
                android:orientation="vertical" >
                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="150dp"
                    android:layout_gravity="top|center"
                    android:padding="1dp"

                    android:src="@mipmap/ic_launcher"
                    android:paddingBottom="10dp"/>
                <TextView
                    android:id="@+id/text_view_id"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:gravity="center|bottom"
                    android:textSize="30dp"
                    android:textColor="@color/colorTitulos"
                    android:paddingTop="0dp"
                    android:text="Bienvenido" />

                <TextView
                    android:id="@+id/text_view_2"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:gravity="center|bottom"
                    android:paddingTop="10dp"
                    android:textColor="@color/colorTitulos"
                    android:paddingBottom="10dp"
                    android:textSize="25dp"
                    android:text="Por favor introduzca su licencia" />

            </LinearLayout>




            <com.google.android.material.textfield.TextInputLayout
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/textInputLayoutPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:passwordToggleEnabled="true"
                app:passwordToggleTint="@color/colorSecundario"
                android:layout_marginTop="290dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                app:boxStrokeColor="@color/colorPrimaryDark"
                android:textColorHint="@color/colorSecundario"
                >


                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/textInputLicencia"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/hint_licencia"
                    app:errorEnabled="true"

                    android:inputType="textPassword"
                    android:maxLines="1"
                    android:gravity="center"
                    android:textSize="30dp"
                    style="@style/ThemeOverlay.App.TextInputLayout"
                    app:boxBackgroundColor="@android:color/transparent"
                    android:background="@android:color/transparent"
                    android:textAppearance="@style/TextLabel"
                    android:textColor="@color/colorTitulos" />









            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:passwordToggleEnabled="false"
                app:passwordToggleTint="@color/colorSecundario"
                android:layout_marginTop="320dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                app:boxStrokeColor="@color/colorPrimaryDark"
                android:textColorHint="@color/colorSecundario">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/textInputAuxNumerPhone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="50dp"
                    android:inputType="number"
                    android:gravity="center"
                    android:maxLines="1"
                    android:textAlignment="center"
                    android:maxLength="10"
                    android:textStyle="bold"
                    android:fontFamily="@font/helvetica"
                    android:hint="Numero de telefono"
                    android:textSize="30dp"
                    style="@style/ThemeOverlay.App.TextInputLayout"
                    app:boxBackgroundColor="@android:color/transparent"
                    android:background="@android:color/transparent"
                    android:textAppearance="@style/TextLabel"
                    android:textColor="@color/colorTitulos"
                    android:visibility="gone"/>

                <com.google.android.material.chip.Chip
                    android:id="@+id/appCompatButtonValLic"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginTop="40dp"
                    android:fontFamily="@font/helvetica"
                    app:chipBackgroundColor="@color/backgroundButtons"
                    android:textColor="@color/colorTextoBotones"
                    android:textAlignment="center"
                    android:textSize="20dp"
                    android:text="@string/hint_val_licencia"
                    app:chipMinTouchTargetSize="0dp"

                    />

                <TextView
                    android:id="@+id/txtUltVersionLicencia"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center"
                    android:paddingTop="40dp"
                    android:text=""
                    android:textColor="#D7DBDD"
                    android:textSize="10dp"
                    android:textStyle="bold" />


            </com.google.android.material.textfield.TextInputLayout>




        </androidx.cardview.widget.CardView>




    </androidx.appcompat.widget.LinearLayoutCompat>
</androidx.core.widget.NestedScrollView>