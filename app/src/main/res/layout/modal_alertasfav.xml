<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/background_negocios"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iconModalAlertaFav"
            android:src="@drawable/alertashome"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/modal_titulo_alerta"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            android:maxLines="2"
            android:lines="2"
            android:textSize="20dp"
            android:text="Alerta"
            android:gravity="center_vertical"
            android:textAppearance="?attr/textAppearanceListItem" />

        <com.google.android.material.chip.Chip
            android:id="@+id/btnModalAlertasReturn"
            android:layout_width="32dp"
            android:layout_height="32dp"
            app:chipIcon="@drawable/btnregresar"
            />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:orientation="vertical" >
        <TextView
            android:id="@+id/modal_desc_alerta"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="10dp"
            android:lines="4"
            android:textSize="15dp"
            android:text="Descripcion"
            android:textAppearance="?attr/textAppearanceListItem" />



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="50dp"
        android:layout_marginBottom="10dp"
        >

        <TextView
            android:id="@+id/modal_fecha_alerta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:text="Fecha"
            android:textAppearance="?attr/textAppearanceListItem" />


        <TextView
            android:id="@+id/modal_hora_alerta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:text="Hora"
            android:layout_marginLeft="60dp"
            android:textAppearance="?attr/textAppearanceListItem" />


        <ImageButton
            android:id="@+id/imgConsulta"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="30dp"
            android:background="@drawable/base_datos_busqueda"
            android:layout_gravity="right"
            android:visibility="gone"
            tools:ignore="MissingConstraints"
            />




    </LinearLayout>


</LinearLayout>