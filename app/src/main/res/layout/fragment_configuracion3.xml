<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/background_negocios"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">




            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="30dp">

                <TextView
                    android:id="@+id/title1"
                    android:layout_width="20dp"
                    android:layout_height="24dp"
                    android:textColor="@color/black"
                    android:text=""
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@+id/divider1"
                    app:layout_constraintBottom_toBottomOf="parent"/>



                <View
                    android:id="@+id/divider1"
                    android:layout_width="1dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="12dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toRightOf="@+id/title1"
                    app:layout_constraintRight_toLeftOf="@+id/title2"
                    app:layout_constraintBottom_toBottomOf="parent"/>

                <TextView
                    android:id="@+id/title2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/helvetica"
                    android:gravity="center"
                    android:lineSpacingExtra="5dp"
                    android:lines="2"
                    android:text="Actualización de Estatus en Equipos con Conexion a Internet"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toRightOf="@+id/divider1"
                    app:layout_constraintRight_toLeftOf="@+id/divider2"
                    app:layout_constraintTop_toTopOf="parent" />



                <View
                    android:id="@+id/divider2"
                    android:layout_width="1dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="12dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toRightOf="@+id/title2"
                    app:layout_constraintBottom_toBottomOf="parent"/>





                <ImageView
                    android:id="@+id/btnAyudaNegociosUpdate"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ayudaconfiguracion"
                    android:gravity="center"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toRightOf="@+id/divider2"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"

                    />



            </androidx.constraintlayout.widget.ConstraintLayout>









            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="30dp"
                android:textColor="@color/black"
                android:fontFamily="@font/helvetica"
                android:textSize="15sp"
                android:maxLines="2"
                android:lines="2"
                android:text="(Valor minimo 5 segundos, máximo 3600 segundos)"
                android:gravity="center_horizontal" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnMenosTmEquipo"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="-"
                    android:textSize="20dp"
                    android:background="@color/backgroundButtons"
                    android:textColor="@color/colorTextoBotones"/>



                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/textInputEditTimeEquipo"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:inputType="number"
                    android:gravity="center"
                    android:maxLines="1"
                    android:textSize="30dp"
                    android:text="5"
                    android:textAppearance="@style/TextLabel"
                    android:layout_weight="1"
                    android:textColor="@color/black" />

                <Button
                    android:id="@+id/btnMasTmEquipo"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="+"
                    android:textSize="20dp"
                    android:background="@color/backgroundButtons"
                    android:textColor="@color/colorTextoBotones"/>



            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Segundos"
                android:textSize="15dp"
                android:textAppearance="@style/TextLabel"
                android:fontFamily="@font/helvetica"
                android:gravity="center_horizontal"/>




            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="100dp"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="30dp">

                <TextView
                    android:id="@+id/title11"
                    android:layout_width="20dp"
                    android:layout_height="24dp"
                    android:text=""
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@+id/divider11"
                    app:layout_constraintBottom_toBottomOf="parent"/>



                <View
                    android:id="@+id/divider11"
                    android:layout_width="1dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="12dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toRightOf="@+id/title11"
                    app:layout_constraintRight_toLeftOf="@+id/title21"
                    app:layout_constraintBottom_toBottomOf="parent"/>

                <TextView
                    android:id="@+id/title21"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:fontFamily="@font/helvetica"
                    android:textSize="15sp"
                    android:lines="2"
                    android:lineSpacingExtra="5dp"
                    android:text="Actualización de Información en Equipos"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toRightOf="@+id/divider11"
                    app:layout_constraintRight_toLeftOf="@+id/divider21"
                    app:layout_constraintBottom_toBottomOf="parent"/>



                <View
                    android:id="@+id/divider21"
                    android:layout_width="1dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="12dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toRightOf="@+id/title21"
                    app:layout_constraintRight_toLeftOf="@+id/btnAyudaActualizacionEquipos"
                    app:layout_constraintBottom_toBottomOf="parent"/>





                <ImageView
                    android:id="@+id/btnAyudaActualizacionEquipos"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ayudaconfiguracion"
                    android:gravity="center"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toRightOf="@+id/divider21"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"

                    />



            </androidx.constraintlayout.widget.ConstraintLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="30dp"
                android:textColor="@color/black"
                android:fontFamily="@font/helvetica"
                android:textSize="15sp"
                android:maxLines="2"
                android:lines="2"
                android:text="(Valor minimo 5 segundos, máximo 3600 segundos)"
                android:gravity="center_horizontal"  />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnMenosActualizacionEquipos"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:background="@color/backgroundButtons"
                    android:textColor="@color/colorTitulos"
                    android:text="-"
                    android:textSize="20dp"/>



                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/textInputEditActualizacionEquipos"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:inputType="number"
                    android:gravity="center"
                    android:maxLines="1"
                    android:textSize="30dp"
                    android:text="60"
                    android:textAppearance="@style/TextLabel"
                    android:layout_weight="1"
                    android:textColor="@color/black" />

                <Button
                    android:id="@+id/btnMasActualizacionEquipos"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:background="@color/backgroundButtons"
                    android:textColor="@color/colorTextoBotones"
                    android:text="+"
                    android:textSize="20dp"/>



            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Segundos"
                android:fontFamily="@font/helvetica"
                android:textSize="15sp"
                android:textAppearance="@style/TextLabel"
                android:gravity="center_horizontal"/>
            <androidx.legacy.widget.Space
                android:layout_width="match_parent"
                android:layout_height="30dp" />













































            <TextView
                android:id="@+id/btnRestauraValoresDefecto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/helvetica"
                android:textSize="20sp"
                android:textAppearance="@style/TextLabel"
                android:textColor="@color/black"
                android:layout_marginTop="20dp"
                android:gravity="center_horizontal"
                android:text="Restaurar valores por defecto"/>


            <androidx.legacy.widget.Space
                android:layout_width="match_parent"
                android:layout_height="30dp" />



            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:passwordToggleEnabled="false"
                app:passwordToggleTint="@color/black"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                app:boxStrokeWidthFocused="0dp"
                app:boxStrokeWidth="-1dp"
                app:boxStrokeColor="@color/colorPrimaryDark"
                android:textColorHint="@color/black"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="85dp"
                    android:gravity="center"
                    android:orientation="horizontal">



                    <com.google.android.material.chip.Chip
                        android:id="@+id/appCompatButtonCancelarConfGnrl"
                        android:layout_width="100dp"
                        android:layout_height="50dp"
                        android:layout_marginRight="40dp"
                        app:chipBackgroundColor="@color/backgroundButtons"
                        android:textAlignment="center"
                        android:text="Cancelar"
                        android:fontFamily="@font/helvetica"
                        android:textColor="@color/colorTextoBotones"
                        android:textSize="11dp"
                        android:layout_weight="1"
                        app:chipMinTouchTargetSize="0dp"/>



                    <com.google.android.material.chip.Chip
                        android:id="@+id/appCompatButtonUpdConfGnrl"
                        android:layout_width="100dp"
                        android:layout_height="50dp"
                        android:layout_marginLeft="40dp"
                        app:chipBackgroundColor="@color/backgroundButtons"
                        android:textAlignment="center"
                        android:text="Guardar"
                        android:fontFamily="@font/helvetica"
                        android:textColor="@color/colorTextoBotones"
                        android:textSize="11dp"
                        android:layout_weight="1"
                        app:chipMinTouchTargetSize="0dp"/>



                </LinearLayout>

            </com.google.android.material.textfield.TextInputLayout>




            <androidx.legacy.widget.Space
                android:layout_width="match_parent"
                android:layout_height="30dp" />




        </LinearLayout>


    </androidx.core.widget.NestedScrollView>

</RelativeLayout>