<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/background_negocios"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:background="@drawable/background_negocios"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">





            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textInputLayoutOldNip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:passwordToggleEnabled="true"
                app:passwordToggleTint="@color/colorPrimario"
                android:layout_marginTop="50dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                app:boxStrokeWidthFocused="0dp"
                app:boxStrokeWidth="-1dp"
                app:boxStrokeColor="@color/colorPrimario"
                android:textColorHint="@color/colorPrimario">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/textInputEditNipAnterior"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:inputType="numberPassword"
                    android:gravity="center"
                    android:maxLines="1"
                    android:textSize="25sp"
                    android:textAlignment="center"
                    android:maxLength="10"
                    android:textStyle="bold"
                    android:fontFamily="@font/helvetica"
                    android:hint="NIP ACTUAL"
                    app:boxBackgroundColor="@android:color/transparent"
                    android:background="@android:color/transparent"
                    android:textColor="@color/colorTitulos" />

            </com.google.android.material.textfield.TextInputLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:background="@color/colorPrimario"/>





            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textInputLayoutNewNip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:passwordToggleEnabled="true"
                app:passwordToggleTint="@color/colorPrimario"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                app:boxStrokeWidthFocused="0dp"
                app:boxStrokeWidth="-1dp"
                app:boxStrokeColor="@color/colorPrimaryDark"
                android:textColorHint="@color/colorPrimario">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/textInputEditNuevoNip"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="50dp"
                    android:inputType="numberPassword"
                    android:gravity="center"
                    android:maxLines="1"
                    android:textSize="25sp"
                    android:textAlignment="center"
                    android:maxLength="10"
                    android:textStyle="bold"
                    android:fontFamily="@font/helvetica"
                    android:hint="NUEVO NIP"
                    app:boxBackgroundColor="@android:color/transparent"
                    android:background="@android:color/transparent"
                    android:textColor="@color/colorPrimario" />

            </com.google.android.material.textfield.TextInputLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:background="@color/colorPrimario"/>


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textInputLayoutConfNip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:passwordToggleEnabled="true"
                app:passwordToggleTint="@color/colorPrimario"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                app:boxStrokeWidthFocused="0dp"
                app:boxStrokeWidth="-1dp"
                app:boxStrokeColor="@color/colorPrimaryDark"
                android:textColorHint="@color/colorPrimario"
                >

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/textInputEditConfirmaNuevoNip"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="50dp"
                    android:inputType="numberPassword"
                    android:gravity="center"
                    android:maxLines="1"
                    android:textSize="25sp"
                    android:textAlignment="center"
                    android:maxLength="10"
                    android:textStyle="bold"
                    android:fontFamily="@font/helvetica"
                    android:hint="CONFIRMA NIP"
                    app:boxBackgroundColor="@android:color/transparent"
                    android:background="@android:color/transparent"
                    android:textColor="@color/colorPrimario"
                    />



            </com.google.android.material.textfield.TextInputLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:background="@color/colorPrimario"/>


            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:passwordToggleEnabled="false"
                app:passwordToggleTint="@color/colorPrimario"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                app:boxStrokeWidthFocused="0dp"
                app:boxStrokeWidth="-1dp"
                app:boxStrokeColor="@color/colorPrimaryDark"
                android:textColorHint="@color/colorPrimario"
                >



                <TextView
                    android:id="@+id/btnRecuperaNIP"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/helvetica"
                    android:textSize="15sp"
                    android:textAppearance="@style/TextLabel"
                    android:textColor="@color/colorPrimario"
                    android:layout_marginTop="20dp"
                    android:gravity="center_horizontal"
                    android:text="Recuperar NIP"
                    />



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="85dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <com.google.android.material.chip.Chip
                        android:id="@+id/appCompatButtonCancelarUpdNip"
                        android:layout_width="100dp"
                        android:layout_height="50dp"
                        android:layout_marginRight="40dp"
                        app:chipBackgroundColor="@color/backgroundButtons"
                        android:text="Cancelar"
                        android:textAlignment="center"
                        android:fontFamily="@font/helvetica"
                        android:textColor="@color/colorAccent"
                        android:textSize="11dp"
                        android:layout_weight="1"
                        app:chipMinTouchTargetSize="0dp"
                        />




                    <com.google.android.material.chip.Chip
                        android:id="@+id/appCompatButtonUpdNip"
                        android:layout_width="100dp"
                        android:layout_height="50dp"
                        android:layout_marginLeft="40dp"
                        app:chipBackgroundColor="@color/backgroundButtons"
                        android:textAlignment="center"
                        android:text="Guardar"

                        android:fontFamily="@font/helvetica"
                        android:textColor="@color/colorAccent"
                        android:textSize="11dp"
                        android:layout_weight="1"
                        app:chipMinTouchTargetSize="0dp"
                        />





                </LinearLayout>

            </com.google.android.material.textfield.TextInputLayout>













        </LinearLayout>
    </ScrollView>




</LinearLayout>