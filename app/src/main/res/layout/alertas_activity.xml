<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/background_negocios"
    android:tag="tgAlertasFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".alertas.AlertasFragment" >






    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:id="@+id/tool_bar_interno"
        android:background="@color/colorSecundario"
        android:orientation="horizontal"
        tools:ignore="MissingConstraints">



        <FrameLayout
            android:id="@+id/frameFiltro"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:clipChildren="false"
            android:clipToPadding="false"
            >
            <ImageView
                android:id="@+id/filtroimageAlertaEstatus"
                android:layout_width="24dp"
                android:layout_height="match_parent"
                android:src="@drawable/filtraralertas"

                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:visibility="visible"
                android:layout_alignParentRight="true"
                />

        </FrameLayout>





        <CheckBox android:id="@+id/checkbox_cheese"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="15sp"
            android:textStyle="bold"
            android:fontFamily="@font/helvetica"
            android:text="Seleccionar todo"
            android:textColor="@color/colorTitulos"
            />

        <ImageView
            android:id="@+id/btnOpcionesCheckBox"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginLeft="20dp"
            android:text=""
            android:visibility="gone"
            android:layout_gravity="center_vertical"
            android:background="@drawable/menuaccionesalerta"
            android:layout_marginRight="10dp"

            />

        <ImageView
            android:id="@+id/btnOpcionesSeleccionados"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginLeft="20dp"
            android:text=""
            android:visibility="gone"
            android:layout_gravity="center_vertical"
            android:background="@drawable/menuaccionesalerta"
            android:layout_marginRight="10dp"

            />


        <Space
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_marginRight="10dp"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/btnUpdAlertas"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:gravity="center"
                android:background="@drawable/actualizargraficos"
                tools:ignore="MissingConstraints" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_marginRight="10dp"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/btnAddAltFav"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:text=""
                android:background="@drawable/signomas"


                />
        </LinearLayout>

    </LinearLayout>


    <com.google.android.material.textfield.TextInputLayout
        app:boxBackgroundColor="@android:color/transparent"
        android:id="@+id/textInputFiltroPalabrasClave"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:hintEnabled="false"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="50dp"
        android:layout_marginLeft="10dp"
        android:layout_centerVertical="true"

        app:layout_constraintTop_toBottomOf="@+id/tool_bar_interno"

        app:endIconMode="clear_text"
        app:errorEnabled="false"
        >
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/txtBusquedaTop"
            android:layout_width="match_parent"
            android:paddingTop="@dimen/text_margin"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:fontFamily="@font/helvetica"
            android:textSize="15dp"
            android:hint="Buscar.."
            />



    </com.google.android.material.textfield.TextInputLayout>

    <LinearLayout
        android:id="@+id/lysearchimg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@+id/tool_bar_interno"
        app:layout_constraintLeft_toRightOf="@+id/textInputFiltroPalabrasClave"

        android:orientation="vertical">

        <ImageView
            android:id="@+id/filtroImagenListadoAlertas"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/buscararchivos2"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:visibility="visible"
            android:layout_gravity="right"

            />

    </LinearLayout>






    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/container"
        android:tag="Fragmento_negocio"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/textInputFiltroPalabrasClave"
        tools:ignore="MissingConstraints" />









    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <ProgressBar
            android:id="@+id/progressAlertas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:indeterminate="true"
            android:visibility="gone"
            tools:ignore="MissingConstraints" />



    </RelativeLayout>





</androidx.constraintlayout.widget.ConstraintLayout>