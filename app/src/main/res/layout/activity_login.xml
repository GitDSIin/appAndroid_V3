<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nestedScrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_licencia"
    android:paddingBottom="20dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="40dp"
    tools:context=".login.LoginActivity">



    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ProgressBar
            android:id="@+id/progressbartop"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:indeterminate="true"
            android:minHeight="5dp"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@+id/tool_bar_principal"
            tools:ignore="MissingConstraints" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cardLogin"
            android:layout_width="match_parent"
            android:layout_height="600dp"
            android:layout_below="@+id/toolbar"
            android:layout_margin="10dp"
            android:layout_marginTop="50dp"
            app:cardBackgroundColor="@android:color/transparent"
            app:cardElevation="0dp"
            app:cardCornerRadius="5dp"
            >


            <LinearLayout
                android:id="@+id/fakeButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical|center_horizontal"
                android:orientation="vertical" >


                <TextView
                    android:id="@+id/text_view_2"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:paddingTop="40dp"
                    android:fontFamily="@font/helvetica"
                    android:textSize="25dp"
                    android:textColor="@color/colorTitulos"
                    android:paddingBottom="20dp"
                    android:text="Bienvenido" />



            </LinearLayout>



            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textInputLayoutPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:passwordToggleEnabled="true"
                app:passwordToggleTint="@color/colorSubTitulos"
                android:layout_marginTop="100dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                app:boxStrokeColor="@color/backgroundButtons"


                android:textColorHint="@color/colorSubTitulos">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/textInputEditTextPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:fontFamily="@font/helvetica"
                    android:hint="@string/hint_confirma_nip"
                    app:errorEnabled="true"
                    android:inputType="numberPassword"
                    android:gravity="center"
                    android:maxLines="1"
                    android:textSize="30dp"
                    app:boxBackgroundColor="@android:color/transparent"
                    android:background="@android:color/transparent"
                    android:textAppearance="@style/TextLabel"
                    android:textColor="@color/colorTitulos" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/appCompatButtonLogin"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginTop="40dp"
                    android:textStyle="bold"
                    android:fontFamily="@font/helvetica"
                    app:chipBackgroundColor="@color/backgroundButtons"
                    android:textAlignment="center"
                    android:text="@string/text_login"
                    android:textColor="@color/colorTextoBotones"
                    android:textSize="30dp"
                    app:chipMinTouchTargetSize="0dp"

                    />
                <com.google.android.material.chip.Chip
                    android:id="@+id/appCompatButtonLoginQA"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginTop="40dp"
                    android:textStyle="bold"
                    android:fontFamily="@font/helvetica"
                    app:chipBackgroundColor="@color/backgroundButtons"
                    android:textAlignment="center"
                    android:text="UPDDB"
                    android:textColor="@color/colorAccent"
                    android:textSize="50dp"
                    android:visibility="gone"
                    app:chipMinTouchTargetSize="0dp"

                    />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="40dp"
                    android:orientation="horizontal"
                    android:gravity="center_horizontal"
                    android:layout_gravity="center_horizontal">
                    <CheckBox
                        android:id="@+id/chkEntornoProduccion"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_below="@id/appCompatButtonLoginQA"
                        android:layout_centerInParent="true"
                        android:textColor="@color/colorSecundario"
                        android:visibility="gone"
                        android:text="Entorno Produccion" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Entorno Desarrollo"
                        android:textSize="15dp"
                        android:layout_marginTop="15dp"
                        android:textColor="@color/colorTitulos"/>

                </LinearLayout>



                <TextView
                    android:id="@+id/btnRecuperaNIP"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Recuperar NIP"
                    android:textSize="15dp"
                    android:textAppearance="@style/TextLabel"
                    android:textColor="@color/colorSubTitulos"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center"
                    android:layout_marginTop="20dp"
                    android:paddingBottom="20dp"

                    android:fontFamily="@font/helvetica" />


                <TextView
                    android:id="@+id/txtUltVersion"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center"
                    android:paddingTop="20dp"
                    android:paddingBottom="40dp"
                    android:textSize="10dp"
                    android:textStyle="bold"
                    android:fontFamily="@font/helvetica"
                    android:text=""
                    android:textColor="#D7DBDD"
                    />




                <ImageView
                    android:id="@+id/imageUtlBiometrico"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_baseline_fingerprint_24"
                    android:layout_margin="10dp"
                    android:gravity="center"
                    android:layout_gravity="center_horizontal"
                    />
                <TextView
                    android:id="@+id/txtUtilizarBiometrico"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center"
                    android:paddingTop="10dp"
                    android:fontFamily="@font/helvetica"
                    android:text="Utilizar Biometrico"
                    android:textSize="17dp"
                    android:textAppearance="@style/TextLabel"
                    android:textColor="@color/colorSubTitulos" />

            </com.google.android.material.textfield.TextInputLayout>




            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">
                <ProgressBar
                    android:id="@+id/lgprogressBar"
                    style="?android:attr/progressBarStyleLarge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:foregroundGravity="center"
                    android:visibility="gone"
                    />

            </RelativeLayout>

        </androidx.cardview.widget.CardView>







    </androidx.appcompat.widget.LinearLayoutCompat>
</androidx.core.widget.NestedScrollView>
